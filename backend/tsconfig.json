{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",  // ✅ Añade esto
    "target": "ES2020",  // ✅ Usa ES2020 o superior
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true  // ✅ Permite importar JSON
  },
  "include": ["src/**/*"]
}