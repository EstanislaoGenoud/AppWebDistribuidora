{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    // ⭐ ESTAS 2 LÍNEAS SON LA SOLUCIÓN:
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*"]  // Le dice a TS: "busca en node_modules de la raíz"
    }
  },
  "include": ["src/**/*"]
}